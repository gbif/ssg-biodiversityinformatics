.frameworkButtons {
	display flex
  flex-direction row
  flex-wrap wrap
  margin 0 vr-block(-0.5)
  justify-content left
  &.spaceAround {
    justify-content space-around
  }
  &.center {
    justify-content center
  }
  .frameworkButton {
    overflow hidden
    text-align center
    background #f15928 
    color white
    margin vr-block(0.5)
    flex 0 0 120px
    border-radius 5px
    font-weight bold
    padding vr-block(0.5)
    span {
      display block
    }
    img {
      margin auto
      height 100px
    }
  }
  .understanding {
    background: #853b64
    &:hover {
      background: #853b64
    }
  }
  .evidence {
    background: #3a617e
    &:hover {
      background: #3a617e
    }
  }
  .data {
    background: #745381
    &:hover {
      background: #745381
    }
  }
  .culture {
    background: #859380
    &:hover {
      background: #859380
    }
  }
}
